if navdb.bgSubsTableColor
	- bgSubsTableColor = navdb.bgSubsTableColor;
div(style="height: 50px")
.container
	h2 #{navdb.titleSubs} &rarr;

	- let widthTd = parseFloat(100/navdb.subsCol) + "%";
	table.table.table-bordered(style="background-color: #"+bgSubsTableColor+";")
		- let iRow = 0;
		each subsTr in subsTable
			- iRow++;
			- let borderBottom = "css-border-b";
			if iRow == subsTable.length
				- borderBottom = "";

			tr(style="height: 200px")
				- let iCol = 0;
				each sub in subsTr
					- iCol++;
					- let borderRight = "css-border-r";
					if iCol == navdb.subsCol
						- borderRight = "";

					td(class=borderBottom+" td-js-card "+borderRight style="width: "+widthTd)
						if sub.cn
							-a;
							.rounded.py-1.mb-5
								h3(style="color: #"+navdb.subsFontColor) #{sub.cn}
							img.css-img-neat(src=sub.photo, width="15%" height="80px")
div(style="height: 50px")
hr